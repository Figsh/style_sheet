$card-background:#FF9955 linear-gradient(30deg,#f44 30% 50%,#44f 80% 100%);
$card-size:100px;
$card-pad:10px;
$rgb:rpt(2,'300,');
$card-fixed-color:hsl(%2(200[,40%]));
body{
Background-color:rgb();
Padding: 20px;
} 
$(name: card){
re(c-bg:'background')
       Background: $card-c-bg!;
       Border: 4px solid;
       Outline: 3px double;
%2(width, height[:$card-size!;])
%2(padding-top, padding-bottom[:$card-pad!;])
%3(,border-,outline-[color: $card-fixed-color!;])
} 

